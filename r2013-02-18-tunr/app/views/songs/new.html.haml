.row
  .four.columns
    = render(:partial => 'shared/errors', :locals => {:object => @song})
    = form_for @song do |f|
      = f.label :name
      = f.text_field :name, :autofocus => true
      = f.label :filename
      = f.text_field :filename
      -if @song.genres.present?
        - Genre.all.each do |genre|
          = check_box_tag 'song[genre_ids][]', genre.id, genre.in?(@song.genres.to_a)
          = genre.name
      = f.submit
  .eight.columns